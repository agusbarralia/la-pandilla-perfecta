---
import { CONTACT_INFO } from '../lib/config';
import IconPhone from './icons/IconPhone.astro';
import IconEmail from './icons/IconEmail.astro';
import IconClock from './icons/IconClock.astro';
import IconInstagram from './icons/IconInstagram.astro';
import IconFacebook from './icons/IconFacebook.astro';

const whatsappUrl = `https://wa.me/${CONTACT_INFO.whatsapp}?text=${encodeURIComponent(CONTACT_INFO.whatsappMessage)}`;
const telUrl = `tel:+${CONTACT_INFO.phoneRaw}`;
---

<section id="contacto" class="py-16 md:py-24 bg-gradient-to-b from-white to-gray-50" aria-label="Contacto">
  <div class="max-w-7xl mx-auto px-4 md:px-8">
    <!-- Section Header -->
    <div data-animate class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        ¡Comunicate con Nosotros!
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        ¿Tenés alguna consulta? Estamos acá para ayudarte. Contactanos por el medio que prefieras.
      </p>
    </div>

    <!-- Contact Methods Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      <!-- Phone Card -->
      <div
        data-animate
        class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg hover:scale-[1.02] transition-all duration-300"
      >
        <div class="flex flex-col items-center text-center">
          <div class="bg-gradient-to-br from-primary to-accent rounded-lg p-4 mb-4">
            <IconPhone class="w-6 h-6 text-white" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Teléfono</h3>
          <a
            href={telUrl}
            class="text-lg text-primary hover:text-primary-dark font-medium hover:underline transition-colors mb-2"
          >
            {CONTACT_INFO.phone}
          </a>
          <p class="text-sm text-gray-600">Llamanos directamente</p>
        </div>
      </div>

      <!-- WhatsApp Card -->
      <div
        data-animate
        class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg hover:scale-[1.02] transition-all duration-300"
      >
        <div class="flex flex-col items-center text-center">
          <div class="bg-[#25D366] rounded-lg p-4 mb-4">
            <svg
              class="w-6 h-6 text-white"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.076 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421-7.403h-.004a9.87 9.87 0 00-9.746 9.798c0 2.734.732 5.404 2.124 7.723L3.6 20.4l8.187-2.148c2.256 1.226 4.797 1.874 7.465 1.874 5.428 0 9.884-4.418 9.884-9.846 0-2.632-.675-5.194-1.959-7.44a9.828 9.828 0 00-7.713-3.642m0-2.082C6.477.414 0 6.843 0 14.694c0 2.856.654 5.649 1.949 8.175L0 24l8.822-2.318c2.511 1.579 5.44 2.412 8.622 2.412 7.923 0 14.4-6.430 14.4-14.357 0-3.839-.934-7.467-2.711-10.634A14.375 14.375 0 0017.05 2.299"
              />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">WhatsApp</h3>
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-lg text-[#25D366] hover:text-[#128C7E] font-medium hover:underline transition-colors mb-2"
          >
            {CONTACT_INFO.phone}
          </a>
          <p class="text-sm text-gray-600">Escribinos por WhatsApp</p>
        </div>
      </div>

      <!-- Email Card -->
      <div
        data-animate
        class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg hover:scale-[1.02] transition-all duration-300"
      >
        <div class="flex flex-col items-center text-center">
          <div class="bg-gradient-to-br from-primary to-accent rounded-lg p-4 mb-4">
            <IconEmail class="w-6 h-6 text-white" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Email</h3>
          <a
            href={`mailto:${CONTACT_INFO.email}`}
            class="text-lg text-primary hover:text-primary-dark font-medium hover:underline transition-colors mb-2 break-all"
          >
            {CONTACT_INFO.email}
          </a>
          <p class="text-sm text-gray-600">Envianos un correo</p>
        </div>
      </div>

      <!-- Hours Card -->
      <div
        data-animate
        class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg hover:scale-[1.02] transition-all duration-300"
      >
        <div class="flex flex-col items-center text-center">
          <div class="bg-gradient-to-br from-primary to-accent rounded-lg p-4 mb-4">
            <IconClock class="w-6 h-6 text-white" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Horarios</h3>
          <div class="space-y-2 text-sm">
            <p class="text-gray-700 font-medium">{CONTACT_INFO.hours.weekdays}</p>
            <p class="text-gray-700 font-medium">{CONTACT_INFO.hours.saturday}</p>
            <p class="text-gray-500">{CONTACT_INFO.hours.sunday}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Form -->
    <div data-animate class="bg-white rounded-xl shadow-md p-8 mb-16 max-w-2xl mx-auto">
      <h3 class="text-2xl font-bold text-gray-900 text-center mb-6">Formulario de Contacto</h3>
      <form
        id="contactForm"
        class="space-y-6"
        onsubmit={(e) => {
          e.preventDefault();
          const name = (document.getElementById('name') as HTMLInputElement)?.value || '';
          const email = (document.getElementById('email') as HTMLInputElement)?.value || '';
          const message = (document.getElementById('message') as HTMLTextAreaElement)?.value || '';

          const whatsappText = encodeURIComponent(
            `Hola! Mi nombre es ${name}\n\nEmail: ${email}\n\nMensaje: ${message}`
          );
          window.open(`https://wa.me/${CONTACT_INFO.whatsapp}?text=${whatsappText}`, '_blank');
        }}
      >
        <!-- Name Field -->
        <div>
          <label for="name" class="block text-sm font-semibold text-gray-900 mb-2">
            Nombre
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all placeholder-gray-400"
            placeholder="Tu nombre"
          />
        </div>

        <!-- Email Field -->
        <div>
          <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all placeholder-gray-400"
            placeholder="tu@email.com"
          />
        </div>

        <!-- Message Field -->
        <div>
          <label for="message" class="block text-sm font-semibold text-gray-900 mb-2">
            Mensaje
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows={5}
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none placeholder-gray-400"
            placeholder="Tu mensaje..."
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn-accent w-full"> Enviar por WhatsApp </button>
      </form>
    </div>

    <!-- Social Media Section -->
    {
      (CONTACT_INFO.social.instagram || CONTACT_INFO.social.facebook) && (
        <div data-animate class="bg-white rounded-xl shadow-md p-8 text-center mb-12">
          <h3 class="text-2xl font-bold text-gray-900 mb-8">Seguinos en Redes</h3>
          <div class="flex justify-center gap-8">
            {CONTACT_INFO.social.instagram && (
              <a
                href={CONTACT_INFO.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-purple-500 via-pink-500 to-red-500 text-white hover:shadow-lg hover:scale-110 transition-all duration-300"
                aria-label="Instagram"
              >
                <IconInstagram class="w-8 h-8" />
              </a>
            )}
            {CONTACT_INFO.social.facebook && (
              <a
                href={CONTACT_INFO.social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center w-16 h-16 rounded-full bg-[#1877F2] text-white hover:shadow-lg hover:scale-110 transition-all duration-300"
                aria-label="Facebook"
              >
                <IconFacebook class="w-8 h-8" />
              </a>
            )}
          </div>
        </div>
      )
    }

    <!-- WhatsApp CTA -->
    <div data-animate class="text-center">
      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-accent inline-flex items-center gap-3 px-8 py-4 text-lg hover:shadow-lg"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.076 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421-7.403h-.004a9.87 9.87 0 00-9.746 9.798c0 2.734.732 5.404 2.124 7.723L3.6 20.4l8.187-2.148c2.256 1.226 4.797 1.874 7.465 1.874 5.428 0 9.884-4.418 9.884-9.846 0-2.632-.675-5.194-1.959-7.44a9.828 9.828 0 00-7.713-3.642m0-2.082C6.477.414 0 6.843 0 14.694c0 2.856.654 5.649 1.949 8.175L0 24l8.822-2.318c2.511 1.579 5.44 2.412 8.622 2.412 7.923 0 14.4-6.430 14.4-14.357 0-3.839-.934-7.467-2.711-10.634A14.375 14.375 0 0017.05 2.299"
          />
        </svg>
        Escribinos por WhatsApp
      </a>
    </div>
  </div>
</section>
