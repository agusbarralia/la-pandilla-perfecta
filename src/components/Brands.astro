---
import { Image } from 'astro:assets';
import { BRANDS } from '../lib/config';

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'Trabajamos con las mejores marcas',
  subtitle = 'Alimento premium para el bienestar de tu mascota',
} = Astro.props;
---

<section class="relative py-16 md:py-24 bg-secondary/10 overflow-hidden" id="marcas">
  <!-- Decorative paw prints -->
  <div class="absolute top-8 left-10 text-secondary opacity-[0.20] -rotate-[20deg] pointer-events-none select-none" aria-hidden="true">
    <svg width="70" height="70" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
      <ellipse cx="50" cy="68" rx="22" ry="18"/>
      <ellipse cx="20" cy="40" rx="10" ry="13" transform="rotate(-25 20 40)"/>
      <ellipse cx="38" cy="28" rx="10" ry="13" transform="rotate(-8 38 28)"/>
      <ellipse cx="62" cy="28" rx="10" ry="13" transform="rotate(8 62 28)"/>
      <ellipse cx="80" cy="40" rx="10" ry="13" transform="rotate(25 80 40)"/>
    </svg>
  </div>
  <div class="absolute bottom-8 right-8 text-secondary opacity-[0.18] rotate-[30deg] pointer-events-none select-none" aria-hidden="true">
    <svg width="55" height="55" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
      <ellipse cx="50" cy="68" rx="22" ry="18"/>
      <ellipse cx="20" cy="40" rx="10" ry="13" transform="rotate(-25 20 40)"/>
      <ellipse cx="38" cy="28" rx="10" ry="13" transform="rotate(-8 38 28)"/>
      <ellipse cx="62" cy="28" rx="10" ry="13" transform="rotate(8 62 28)"/>
      <ellipse cx="80" cy="40" rx="10" ry="13" transform="rotate(25 80 40)"/>
    </svg>
  </div>
  <div class="max-w-7xl mx-auto px-4 md:px-8">
    <!-- Heading -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{title}</h2>
      <p class="text-lg text-gray-600">{subtitle}</p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-8 md:gap-12 items-center">
      {
        BRANDS.map((brand) => (
          <div data-animate class="flex items-center justify-center">
            {brand.logo ? (
              <!-- Real logo (optimized by Astro) -->
              <Image
                src={brand.logo}
                alt={`Logo de ${brand.name}`}
                class="h-12 md:h-16 w-auto grayscale opacity-70 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
                widths={[64, 128, 192]}
                sizes="(max-width: 768px) 48px, 64px"
                format="webp"
                quality={85}
              />
            ) : (
              <!-- Placeholder badge -->
              <div class="bg-gray-100 border-2 border-gray-300 rounded-lg px-6 py-4 hover:border-primary hover:bg-primary/5 transition-all duration-300">
                <p class="text-lg md:text-xl font-bold text-gray-800 text-center whitespace-nowrap">
                  {brand.name}
                </p>
              </div>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
