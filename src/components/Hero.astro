---
import { Image } from 'astro:assets';
import { SITE_CONFIG } from '../lib/config';
import heroImage from '../assets/images/hero-placeholder.jpg';

interface Props {
  title?: string;
  slogan?: string;
  ctaText?: string;
  ctaLink?: string;
  imageAlt?: string;
}

const {
  title = SITE_CONFIG.name,
  slogan = SITE_CONFIG.slogan,
  ctaText = 'Contactanos',
  ctaLink = '#contacto',
  imageAlt = 'Perros felices en La Pandilla Perfecta',
} = Astro.props;
---

<section class="relative min-h-screen md:h-[80vh] w-full overflow-hidden" aria-label="Hero section">
  <!-- Background Image -->
  <Image
    src={heroImage}
    alt={imageAlt}
    class="absolute inset-0 w-full h-full object-cover"
    widths={[320, 640, 1024, 1920]}
    sizes="100vw"
    format="webp"
    quality={80}
    loading="eager"
  />

  <!-- Overlay Gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-primary/60 via-primary/50 to-primary/70"></div>

  <!-- Content -->
  <div class="relative z-10 flex items-center justify-center min-h-screen md:h-[80vh] px-4 md:px-8 lg:px-12">
    <div class="text-center text-white max-w-4xl mx-auto">
      <!-- Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 md:mb-6">
        üêæ {title}
      </h1>

      <!-- Slogan -->
      <p class="text-lg md:text-xl lg:text-2xl mb-8 md:mb-10 font-light">
        {slogan}
      </p>

      <!-- CTA Button -->
      <a
        href={ctaLink}
        class="inline-block px-8 py-3 md:px-10 md:py-4 bg-white text-primary font-semibold text-base md:text-lg rounded-lg shadow-lg hover:bg-white/90 hover:scale-105 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary"
      >
        {ctaText}
      </a>
    </div>
  </div>
</section>
