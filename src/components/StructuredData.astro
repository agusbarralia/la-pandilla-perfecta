---
import { SITE_CONFIG, SEO_CONFIG, CONTACT_INFO } from '../lib/config';

// Structured data for Google (JSON-LD)
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'PetStore',
  name: SITE_CONFIG.name,
  description: SITE_CONFIG.description,
  url: SEO_CONFIG.siteUrl,
  telephone: CONTACT_INFO.phoneRaw,
  email: CONTACT_INFO.email,
  image: `${SEO_CONFIG.siteUrl}${SEO_CONFIG.ogImage}`,
  address: {
    '@type': 'PostalAddress',
    streetAddress: CONTACT_INFO.address.street,
    addressLocality: CONTACT_INFO.address.city,
    addressRegion: CONTACT_INFO.address.province,
    addressCountry: 'AR',
  },
  geo: {
    '@type': 'GeoCoordinates',
    latitude: -34.6037, // Approximate - update with exact coordinates
    longitude: -58.3816,
  },
  openingHoursSpecification: [
    {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      opens: '09:00',
      closes: '19:00',
    },
    {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: 'Saturday',
      opens: '09:00',
      closes: '14:00',
    },
  ],
  priceRange: '$$',
};
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
