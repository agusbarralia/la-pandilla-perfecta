---
import { ABOUT_US } from '../lib/config';

interface Props {
  title?: string;
}

const { title = 'Sobre Nosotros' } = Astro.props;
---

<section class="relative py-16 md:py-24 bg-primary-dark overflow-hidden" id="sobre-nosotros">
  <!-- Decorative paw prints -->
  <div class="absolute top-6 left-8 text-white opacity-[0.08] -rotate-[15deg] pointer-events-none select-none" aria-hidden="true">
    <svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
      <ellipse cx="50" cy="68" rx="22" ry="18"/>
      <ellipse cx="20" cy="40" rx="10" ry="13" transform="rotate(-25 20 40)"/>
      <ellipse cx="38" cy="28" rx="10" ry="13" transform="rotate(-8 38 28)"/>
      <ellipse cx="62" cy="28" rx="10" ry="13" transform="rotate(8 62 28)"/>
      <ellipse cx="80" cy="40" rx="10" ry="13" transform="rotate(25 80 40)"/>
    </svg>
  </div>
  <div class="absolute bottom-8 right-10 text-white opacity-[0.08] rotate-[25deg] pointer-events-none select-none" aria-hidden="true">
    <svg width="80" height="80" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
      <ellipse cx="50" cy="68" rx="22" ry="18"/>
      <ellipse cx="20" cy="40" rx="10" ry="13" transform="rotate(-25 20 40)"/>
      <ellipse cx="38" cy="28" rx="10" ry="13" transform="rotate(-8 38 28)"/>
      <ellipse cx="62" cy="28" rx="10" ry="13" transform="rotate(8 62 28)"/>
      <ellipse cx="80" cy="40" rx="10" ry="13" transform="rotate(25 80 40)"/>
    </svg>
  </div>
  <div class="absolute top-1/3 right-6 text-white opacity-[0.05] rotate-[5deg] pointer-events-none select-none" aria-hidden="true">
    <svg width="55" height="55" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
      <ellipse cx="50" cy="68" rx="22" ry="18"/>
      <ellipse cx="20" cy="40" rx="10" ry="13" transform="rotate(-25 20 40)"/>
      <ellipse cx="38" cy="28" rx="10" ry="13" transform="rotate(-8 38 28)"/>
      <ellipse cx="62" cy="28" rx="10" ry="13" transform="rotate(8 62 28)"/>
      <ellipse cx="80" cy="40" rx="10" ry="13" transform="rotate(25 80 40)"/>
    </svg>
  </div>

  <div class="max-w-7xl mx-auto px-4 md:px-8">
    <!-- Heading -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{title}</h2>
      <p class="text-lg text-white/70">Conoce nuestra historia y valores</p>
    </div>

    <!-- Mission & Vision -->
    <div class="grid md:grid-cols-2 gap-12 mb-20">
      <!-- Mission -->
      <div data-animate class="bg-white rounded-lg p-8 shadow-sm hover:shadow-md transition-shadow">
        <h3 class="text-2xl font-bold text-primary mb-4">Nuestra Misión</h3>
        <p class="text-gray-700 leading-relaxed">
          {ABOUT_US.mission}
        </p>
      </div>

      <!-- Vision -->
      <div data-animate class="bg-white rounded-lg p-8 shadow-sm hover:shadow-md transition-shadow">
        <h3 class="text-2xl font-bold text-primary mb-4">Nuestra Visión</h3>
        <p class="text-gray-700 leading-relaxed">
          {ABOUT_US.vision}
        </p>
      </div>
    </div>
  </div>
</section>
