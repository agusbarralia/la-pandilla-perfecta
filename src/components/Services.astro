---
import ServiceCard from './ServiceCard.astro';
import IconFood from './icons/IconFood.astro';
import IconScissors from './icons/IconScissors.astro';
import IconWash from './icons/IconWash.astro';
import IconToy from './icons/IconToy.astro';
import IconBottle from './icons/IconBottle.astro';
import IconChat from './icons/IconChat.astro';
import { SERVICES } from '../lib/config';

// Map service IDs to icon components
const iconMap = {
  alimentos: IconFood,
  peluqueria: IconScissors,
  lavado: IconWash,
  accesorios: IconToy,
  higiene: IconBottle,
  asesoria: IconChat,
};

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'Nuestros Servicios',
  subtitle = 'Todo lo que tu peludo necesita en un solo lugar',
} = Astro.props;
---

<section class="relative py-16 md:py-24 bg-gray-50 overflow-hidden" id="servicios">
  <!-- Decorative paw prints -->
  <div class="absolute top-8 right-8 text-primary opacity-[0.18] rotate-[20deg] pointer-events-none select-none" aria-hidden="true">
    <svg width="90" height="90" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
      <ellipse cx="50" cy="68" rx="22" ry="18"/>
      <ellipse cx="20" cy="40" rx="10" ry="13" transform="rotate(-25 20 40)"/>
      <ellipse cx="38" cy="28" rx="10" ry="13" transform="rotate(-8 38 28)"/>
      <ellipse cx="62" cy="28" rx="10" ry="13" transform="rotate(8 62 28)"/>
      <ellipse cx="80" cy="40" rx="10" ry="13" transform="rotate(25 80 40)"/>
    </svg>
  </div>
  <div class="absolute bottom-12 left-6 text-primary opacity-[0.15] -rotate-[30deg] pointer-events-none select-none" aria-hidden="true">
    <svg width="65" height="65" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
      <ellipse cx="50" cy="68" rx="22" ry="18"/>
      <ellipse cx="20" cy="40" rx="10" ry="13" transform="rotate(-25 20 40)"/>
      <ellipse cx="38" cy="28" rx="10" ry="13" transform="rotate(-8 38 28)"/>
      <ellipse cx="62" cy="28" rx="10" ry="13" transform="rotate(8 62 28)"/>
      <ellipse cx="80" cy="40" rx="10" ry="13" transform="rotate(25 80 40)"/>
    </svg>
  </div>
  <div class="absolute top-1/2 right-4 text-primary opacity-[0.12] rotate-[10deg] pointer-events-none select-none" aria-hidden="true">
    <svg width="50" height="50" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
      <ellipse cx="50" cy="68" rx="22" ry="18"/>
      <ellipse cx="20" cy="40" rx="10" ry="13" transform="rotate(-25 20 40)"/>
      <ellipse cx="38" cy="28" rx="10" ry="13" transform="rotate(-8 38 28)"/>
      <ellipse cx="62" cy="28" rx="10" ry="13" transform="rotate(8 62 28)"/>
      <ellipse cx="80" cy="40" rx="10" ry="13" transform="rotate(25 80 40)"/>
    </svg>
  </div>

  <div class="max-w-7xl mx-auto px-4 md:px-8">
    <!-- Heading -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{title}</h2>
      <p class="text-lg text-gray-600">{subtitle}</p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 auto-rows-fr">
      {
        SERVICES.map((service) => {
          const IconComponent = iconMap[service.id as keyof typeof iconMap];
          return (
            <div data-animate>
              <ServiceCard title={service.title} description={service.description}>
                <IconComponent slot="icon" class="w-12 h-12 text-accent" />
              </ServiceCard>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
